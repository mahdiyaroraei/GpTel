<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/add_insurance_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="vertical"
        android:padding="17dp">

        <EditText
            android:id="@+id/first_name_edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:background="#FFF"
            android:hint="نام"
            android:inputType="textPersonName"
            android:padding="7dp"
            android:textColor="#000"
            android:textColorHint="@color/text_color_desc" />

        <EditText
            android:id="@+id/last_name_edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:background="#FFF"
            android:hint="نام خانوادگی"
            android:inputType="textPersonName"
            android:padding="7dp"
            android:textColor="#000"
            android:textColorHint="@color/text_color_desc" />

        <EditText
            android:id="@+id/national_code_edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:background="#FFF"
            android:hint="کد ملی"
            android:inputType="number"
            android:maxLength="10"
            android:padding="7dp"
            android:textColor="#000"
            android:textColorHint="@color/text_color_desc" />

        <EditText
            android:id="@+id/address_edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:background="#FFF"
            android:hint="آدرس"
            android:padding="7dp"
            android:textColor="#000"
            android:textColorHint="@color/text_color_desc" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@color/deviceonline">

            <Button
                android:id="@+id/save_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:gravity="center"
                android:text="ذخیره"
                android:textColor="@color/btn_text_color" />
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/show_insurance_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="vertical"
        android:padding="17dp">

        <TextView
            android:id="@+id/person_name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="نام و نام خانوادگی: "
            android:textColor="@color/text_color_gray" />

        <TextView
            android:id="@+id/person_national_code_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="09228554558"
            android:textColor="@color/text_color_gray" />

        <TextView
            android:id="@+id/person_address_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="بولوار خاقانی، خاقنی 58، پلاک 453"
            android:textColor="@color/text_color_gray" />
    </LinearLayout>
</RelativeLayout>