<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="325dp"
    android:layout_height="200dp"
    android:background="@drawable/ic_bubble"
    android:padding="12dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/time_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:id="@+id/time_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:text="1395/6/18 10:31 AM"
            android:textColor="#FFF"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/clock" />
    </LinearLayout>

    <TextView
        android:id="@+id/speed_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:paddingRight="12dp"
        android:layout_below="@+id/time_layout"
        android:text="سرعت: کیلومتر بر ساعت"
        android:textColor="#FFF"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/lat_lon_txt"
        android:layout_width="wrap_content"
        android:paddingRight="12dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/speed_txt"
        android:layout_marginTop="12dp"
        android:text="طول و عرض جغرافیایی: 35.584 و 59.5488"
        android:textColor="#FFF"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/address_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/lat_lon_txt"
        android:layout_marginTop="12dp"
        android:paddingRight="12dp"
        android:text="آدرس: بولوار دلاوران، دلاوران 13، پلاک 25"
        android:textColor="#FFF"
        android:textSize="15sp" />

</RelativeLayout>