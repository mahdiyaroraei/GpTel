<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/back_to_phone_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:drawableLeft="@drawable/ic_back"
        android:text="ورود شماره موبایل"
        android:textColor="#8DADE0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/edt_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/verifyCode0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@android:color/transparent"
                android:hint="-"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="50sp">

                <requestFocus />
            </EditText>

            <EditText
                android:id="@+id/verifyCode1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="17dp"
                android:background="@android:color/transparent"
                android:hint="-"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="50sp" />

            <EditText
                android:id="@+id/verifyCode2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="17dp"
                android:background="@android:color/transparent"
                android:hint="-"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="50sp" />

            <EditText
                android:id="@+id/verifyCode3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="17dp"
                android:background="@android:color/transparent"
                android:hint="-"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="50sp" />

            <EditText
                android:id="@+id/verifyCode4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="17dp"
                android:background="@android:color/transparent"
                android:hint="-"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="50sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/timer_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edt_layout"
            android:paddingBottom="17dp"
            android:paddingTop="17dp"
            android:text="02:00"
            android:textColor="#8DADE0" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/timer_txt"
            android:background="@color/deviceonline">

            <Button
                android:id="@+id/send_code_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="?attr/selectableItemBackground"
                android:drawableRight="@drawable/ic_next"
                android:gravity="center"
                android:padding="7dp"
                android:text="@string/phone_verify"
                android:textColor="#ffffff"
                android:textStyle="bold" />
        </FrameLayout>
    </LinearLayout>

</RelativeLayout>